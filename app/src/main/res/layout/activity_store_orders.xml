<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StoreOrderActivity">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/storeOrderHeader"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.007"
            android:id="@+id/reviewLabel" android:layout_marginTop="8dp"/>
    <Button
            android:text="@string/returnMain"
            android:layout_width="369dp"
            android:layout_height="73dp" android:id="@+id/returnBTN"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="40dp" android:onClick="returnToMain"
            app:layout_constraintHorizontal_bias="0.476"/>
    <ListView
            android:layout_width="361dp"
            android:layout_height="432dp"
            android:id="@+id/ordersList" android:layout_marginBottom="7dp"
            app:layout_constraintBottom_toTopOf="@+id/returnBTN" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/reviewLabel" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>