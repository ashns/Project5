<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".CoffeeActivity">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="171dp" app:srcCompat="@drawable/tempcoffee" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/_dynamic" android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="image of coffee"/>
    <RadioGroup
            android:layout_width="149dp"
            android:layout_height="134dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/creamCB" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="11dp" android:layout_marginRight="11dp" android:id="@+id/coffeeSize">
        <RadioButton
                android:text="@string/shortSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/shortCB"/>
        <RadioButton
                android:text="@string/tallSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/tallCB"/>
        <RadioButton
                android:text="@string/grandeSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/grandeCB"/>
        <RadioButton
                android:text="@string/ventiSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/ventiCB"/>
    </RadioGroup>
    <CheckBox
            android:text="@string/cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/creamCB"
            app:layout_constraintTop_toBottomOf="@+id/coffeeSize" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
            app:layout_constraintBottom_toTopOf="@+id/syrupCB" app:layout_constraintEnd_toStartOf="@+id/milkCB"/>
    <CheckBox
            android:text="@string/milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/milkCB"
            app:layout_constraintTop_toBottomOf="@+id/coffeeSize" app:layout_constraintStart_toEndOf="@+id/creamCB"
            app:layout_constraintBottom_toTopOf="@+id/caramelCB" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp" android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"/>
    <CheckBox
            android:text="@string/syrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/syrupCB"
            app:layout_constraintTop_toBottomOf="@+id/creamCB" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
            app:layout_constraintBottom_toTopOf="@+id/whippedcremeCB" app:layout_constraintEnd_toStartOf="@+id/milkCB"
            android:layout_marginEnd="6dp" android:layout_marginRight="6dp" android:layout_marginTop="10dp"/>
    <CheckBox
            android:text="@string/caramel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/caramelCB"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/syrupCB" app:layout_constraintBottom_toTopOf="@+id/whippedcremeCB"
            app:layout_constraintTop_toBottomOf="@+id/milkCB" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="19dp" android:layout_marginRight="19dp" android:layout_marginBottom="10dp"/>
    <CheckBox
            android:text="@string/whippedcreme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/whippedcremeCB"
            app:layout_constraintTop_toBottomOf="@+id/syrupCB" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/quantitySpinner" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="27dp" android:layout_marginRight="27dp" android:layout_marginTop="10dp"/>
    <ListView
            android:layout_width="211dp"
            android:layout_height="404dp" android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" app:layout_constraintStart_toEndOf="@+id/coffeeSize"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginEnd="14dp" android:layout_marginRight="14dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <Button
            android:text="@string/addOrder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintTop_toBottomOf="@+id/quantitySpinner" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="75dp" android:layout_marginRight="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="100dp"/>
    <Button
            android:text="@string/removeItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/_dynamic" android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="43dp"/>
    <Spinner
            android:layout_width="123dp"
            android:layout_height="31dp" android:id="@+id/quantitySpinner"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/whippedcremeCB"
            android:layout_marginBottom="105dp" app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toStartOf="@id/imageView" android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>