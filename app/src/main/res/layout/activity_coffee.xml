<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="250dp"
            android:layout_height="171dp" app:srcCompat="@drawable/tempcoffee" android:id="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="80dp" android:layout_marginStart="80dp" android:layout_marginBottom="9dp"
            app:layout_constraintBottom_toTopOf="@+id/_dynamic" android:layout_marginEnd="81dp"
            android:layout_marginRight="81dp" app:layout_constraintEnd_toEndOf="parent"/>
    <RadioGroup
            android:layout_width="149dp"
            android:layout_height="134dp"
            android:layout_marginTop="70dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp" android:layout_marginBottom="26dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="11dp" android:layout_marginRight="11dp" android:id="@+id/radioGroup2">
        <RadioButton
                android:text="Short"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton4"/>
        <RadioButton
                android:text="Tall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton"/>
        <RadioButton
                android:text="Grande"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton2"/>
        <RadioButton
                android:text="Venti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/radioButton3"/>
    </RadioGroup>
    <CheckBox
            android:text="Cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox3" app:layout_constraintEnd_toStartOf="@+id/checkBox2"/>
    <CheckBox
            android:text="Milk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox2"
            app:layout_constraintTop_toBottomOf="@+id/radioGroup2" app:layout_constraintStart_toEndOf="@+id/checkBox"
            app:layout_constraintBottom_toTopOf="@+id/checkBox4" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="28dp" android:layout_marginRight="28dp" android:layout_marginTop="30dp"
            android:layout_marginBottom="5dp"/>
    <CheckBox
            android:text="Sugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox3"
            app:layout_constraintTop_toBottomOf="@+id/checkBox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp"
            app:layout_constraintBottom_toTopOf="@+id/checkBox5" app:layout_constraintEnd_toStartOf="@+id/checkBox2"
            android:layout_marginEnd="6dp" android:layout_marginRight="6dp" android:layout_marginTop="10dp"/>
    <CheckBox
            android:text="Syrup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox4"
            android:layout_marginLeft="6dp" android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/checkBox3" app:layout_constraintBottom_toTopOf="@+id/checkBox5"
            app:layout_constraintTop_toBottomOf="@+id/checkBox2" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="19dp" android:layout_marginRight="19dp" android:layout_marginBottom="10dp"/>
    <CheckBox
            android:text="Whipped Cream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/checkBox5"
            app:layout_constraintTop_toBottomOf="@+id/checkBox3" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp" android:layout_marginStart="26dp" android:layout_marginBottom="19dp"
            app:layout_constraintBottom_toTopOf="@+id/spinner" app:layout_constraintEnd_toStartOf="@+id/_dynamic"
            android:layout_marginEnd="27dp" android:layout_marginRight="27dp" android:layout_marginTop="10dp"/>
    <ListView
            android:layout_width="211dp"
            android:layout_height="404dp" android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp" app:layout_constraintStart_toEndOf="@+id/radioGroup2"
            android:layout_marginTop="9dp" app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginEnd="14dp" android:layout_marginRight="14dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/button2"/>
    <Button
            android:text="Add to Order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            android:layout_marginTop="35dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner" app:layout_constraintEnd_toStartOf="@+id/button2"
            android:layout_marginEnd="75dp" android:layout_marginRight="75dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="55dp"
            android:layout_marginStart="55dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="48dp"/>
    <Button
            android:text="Remove Item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:layout_marginTop="31dp"
            app:layout_constraintTop_toBottomOf="@+id/_dynamic" android:layout_marginLeft="75dp"
            android:layout_marginStart="75dp" app:layout_constraintStart_toEndOf="@+id/button"
            android:layout_marginEnd="60dp" android:layout_marginRight="60dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="43dp"/>
    <Spinner
            android:layout_width="123dp"
            android:layout_height="31dp" android:id="@+id/spinner"
            android:layout_marginTop="22dp" app:layout_constraintTop_toBottomOf="@+id/checkBox5"
            android:layout_marginBottom="105dp" app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toStartOf="@+id/_dynamic" android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp" android:layout_marginStart="30dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>